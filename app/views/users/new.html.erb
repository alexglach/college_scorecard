<div class="container">
  <div class="row">
    <div class="col-sm-12">
      
      <h1>Create a New User</h1>

      <%= form_for @user do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit %>

      <% end %>

    </div>
  </div>
</div>