<h1>General Overview</h1>

<table class="table table-striped">

	<tr>
		<td>Location</td>
		<td><%=school.location %></td>
	</tr>

	<tr>
		<td>Size</td>
		<td><%= school.student.size %></td>
	</tr>

	<tr>
		<td>Admission Rate</td>
		<td><%= to_percent(school.admission.admission_rate_overall) %></td>
	</tr>

	<tr>
		<td>Avg SAT Score (Math)</td>
		<td><%= float_to_int(school.admission.sat_scores_midpoint_math) %></td>
	</tr>
	<tr>
		<td>Avg SAT Score (Critical Reading)</td>
		<td><%= float_to_int(school.admission.sat_scores_midpoint_critical_reading) %></td>
	</tr>
	<tr>
		<td>Avg SAT Score (Writing)</td>
		<td><%= float_to_int(school.admission.sat_scores_midpoint_writing) %></td>
	</tr>
	<tr>
		<td>Avg SAT Score (Cumulative)</td>
		<td><%= float_to_int(school.admission.sat_scores_average_overall) %></td>
	</tr>

	<tr>

		<td>Completion rate for first-time, full-time students within 6 years:</td>
		<td>  
      	<%= (school.completion.completion_rate_4yr_150nt * 100).to_s + "%" if school.completion.completion_rate_4yr_150nt %> <%= (school.completion.completion_rate_less_than_4yr_150nt * 100).to_s + "%" if school.completion.completion_rate_less_than_4yr_150nt %>
  	</td>
	</tr>

	<tr>
	

		<td>Tuition (in state)</td>
		<td><%= number_to_currency(school.cost.tuition_in_state, precision: 0)%></td>
	</tr>

	<tr>
		<td>Tuition (out of state)</td>
		<td><%= number_to_currency(school.cost.tuition_in_state, precision:0)%></td>
	</tr>



</table>